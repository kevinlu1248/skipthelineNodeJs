        <!-- Classic CKEditor 4 -->
        <script src="//cdn.ckeditor.com/4.12.1/full/ckeditor.js"></script>
        <!-- Jquery -->
        <script
            src="https://code.jquery.com/jquery-3.4.1.min.js"
            integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
            crossorigin="anonymous"></script>
        <!-- Custom CSS -->
        <link rel="stylesheet" href="css/main.css">
    </head>
    <body>

        <div id="main-container" class="d-flex">
            <div id="nav-header" class="d-flex justify-content-between px-lg-4 py-lg-2">
                <div class="notes-title text-muted">
                    <h1 contenteditable="true" id="notes-title-input">
                        <em>Untitled Notes</em>
                    </h1>
                </div>
                <div>
                    <h1>
                        Noter Logo
                    </h1>
                </div>
            </div>
            <div class="text-editing-container">
                <textarea name="content" id="editor">
                </textarea>
            </div>
        </div>

        <!-- Custom JS -->
        <script src="js/main.js"></script>

